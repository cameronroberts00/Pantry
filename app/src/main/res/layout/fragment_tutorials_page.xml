<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="2dp"
    tools:context=".TutorialsPage">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="0dp"
            android:background="@mipmap/back_arrow_foreground"
            app:backgroundTint="@color/mainGreen"
            app:iconPadding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/back"
            android:layout_marginTop="0dp">

            <RelativeLayout
                android:id="@+id/content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="0dp"
                android:foregroundGravity="center_horizontal"
                android:gravity="center_horizontal">

                <HorizontalScrollView
                    android:id="@+id/buttons"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/videoContainer"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="2dp"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/storeroom"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageView56"
                                    android:layout_width="match_parent"
                                    android:layout_height="82dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@mipmap/thumb_storeroom_foreground"
                                    tools:src="@mipmap/thumb_storeroom_foreground"
                                    tools:srcCompat="@mipmap/thumb_storeroom_foreground" />

                                <TextView
                                    android:id="@+id/textView196"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginBottom="33dp"
                                    android:text="The Storeroom" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/finding"
                            android:layout_width="120dp"
                            android:layout_height="140dp"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageView256"
                                    android:layout_width="match_parent"
                                    android:layout_height="82dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@mipmap/thumb_recipes_foreground" />

                                <TextView
                                    android:id="@+id/textView1196"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="4dp"
                                    android:layout_marginLeft="4dp"
                                    android:layout_marginBottom="33dp"
                                    android:text="Finding Recipes" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/addingBarcode"
                            android:layout_width="120dp"
                            android:layout_height="match_parent"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageView356"
                                    android:layout_width="match_parent"
                                    android:layout_height="82dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@mipmap/thumb_barcode_foreground" />

                                <TextView
                                    android:id="@+id/textView1936"
                                    android:layout_width="86dp"
                                    android:layout_height="36dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginLeft="6dp"
                                    android:layout_marginBottom="18dp"
                                    android:text="Adding Items by Barcode" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/addingManual"
                            android:layout_width="120dp"
                            android:layout_height="140dp"
                            android:layout_margin="2dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="20dp">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/imageView5"
                                    android:layout_width="match_parent"
                                    android:layout_height="82dp"
                                    android:scaleType="centerCrop"
                                    app:srcCompat="@mipmap/thumb_manual_foreground" />

                                <TextView
                                    android:id="@+id/textView19"
                                    android:layout_width="85dp"
                                    android:layout_height="37dp"
                                    android:layout_alignParentStart="true"
                                    android:layout_alignParentLeft="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginStart="9dp"
                                    android:layout_marginLeft="9dp"
                                    android:layout_marginBottom="17dp"
                                    android:text="Adding Items Manually" />
                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Tutorials"
                    android:textColor="@color/mainGreen"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/videoContainer"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:layout_below="@+id/textView18"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginBottom="8dp"
                    app:cardCornerRadius="20dp">

                    <VideoView
                        android:id="@+id/videoView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </ScrollView>

    </RelativeLayout>

</FrameLayout>